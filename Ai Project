import string
from tkinter import *
from tkinter import messagebox
window = Tk()
window.geometry("1920x1080")
global NAME, AGE, var
var = 0
# main login screen
top_frame = Frame(window, bg = 'Tan' , height = 1080, width = 1920)
top_frame.pack()


# to check if the entered age is correct
def check(age):
	for i in age:
		if i not in string.digits:
			return False
		return True

# saving name and age of the user
def save():
	NAME = name_entry.get()
	age = age_entry.get()
	
	if check(age):
		AGE = int(age)

		if AGE <= 0 or AGE > 100:
			messagebox.showinfo("Age grp not found ", "Enter correct Age!")

		else:
			top_frame.destroy()
			new_frame = Frame(window, bg = 'Tan', height = 1080, width = 1920)
			new_frame.pack()

			#prediction function
			def predict():
				new_frame.destroy()
				naya_frame = Frame(window, bg = 'Tan', height = 1080, width = 1920)
				naya_frame.pack()

				def chkbtn():
					global var
					if v1.get() == 1 or v2.get() == 1 or v3.get() == 1 or v4.get() == 1 or v5.get() == 1 or v6.get() == 1 or v7.get() == 1 or v8.get() == 1 or v9.get() == 1 or v10.get() == 1:
						var += 1

				def result():
					naya_frame.destroy()
					agla_frame = Frame(window, bg = "Tan", height = 1080, width = 1920)
					agla_frame.pack()

					res = Label(window, text = "Your prediction for cardiac arrest is: ", fg = 'Black', font = ('Open Sans', 25, 'bold'), bg = 'Teal')
					res.place(x = 500, y = 500)

					#checking the probabilty
					if var < 3:
						print(var / 10)
						rslt = "Congratulations, you dont have any sign of cardiac arrest"
					elif var > 3 and var <= 5:
						rslt = "You may have 30% chance of cardiac arrest " 
					elif var > 5 and var < 7:
						rslt = "You may have 50% chance of having cardiac arrest" 
					elif var >= 7 and var <= 8:
						rslt = "You may have 80% chance of having cardiac arrest"
					elif var > 8 and var <= 10:
						rslt = "You may have 90% chance of having cardiac arrest"
					rres = Label(window, text = rslt, fg = 'Black', font = ('Open Sans', 25, 'bold'))
					rres.place(x = 500, y = 550)

				name = Label(window, text = "Name of Patient:-- ", fg = 'Blue', font = ('Open Sans', 25, 'bold'))
				name.place(x = 400, y = 50)
				name_label = Label(window, text = NAME, fg = 'Black', font = ('Open Sans', 25, 'bold'), padx = 10, pady = 5)
				name_label.place(x = 800, y = 50)

				v1 = IntVar()
				v2 = IntVar()
				v3 = IntVar()
				v4 = IntVar()
				v5 = IntVar()
				v6 = IntVar()
				v7 = IntVar()
				v8 = IntVar()
				v9 = IntVar()
				v10 = IntVar()

				cbt1 = Checkbutton(window, text = "Symptom1", variable = v1, command = chkbtn) 
				cbt1.place(x = 700, y = 300)

				cbt2 = Checkbutton(window, text = "Symptom2", variable = v2, command = chkbtn) 
				cbt2.place(x = 700, y = 350)

				cbt3 = Checkbutton(window, text = "Symptom3", variable = v3, command = chkbtn) 
				cbt3.place(x = 700, y = 400)

				cbt4 = Checkbutton(window, text = "Symptom4", variable = v4, command = chkbtn) 
				cbt4.place(x = 700, y = 450)

				cbt5 = Checkbutton(window, text = "Symptom5", variable = v5, command = chkbtn) 
				cbt5.place(x = 700, y = 500)
				cbt6 = Checkbutton(window, text = "Symptom6", variable = v6, command = chkbtn) 
				cbt6.place(x = 800, y = 300)

				cbt7 = Checkbutton(window, text = "Symptom7", variable = v7, command = chkbtn) 
				cbt7.place(x = 800, y = 350)

				cbt8 = Checkbutton(window, text = "Symptom8", variable = v8, command = chkbtn) 
				cbt8.place(x = 800, y = 400)

				cbt9 = Checkbutton(window, text = "Symptom9", variable = v9, command = chkbtn) 
				cbt9.place(x = 800, y = 450)

				cbt10 = Checkbutton(window, text = "Symptom10", variable = v10, command = chkbtn) 
				cbt10.place(x = 800, y = 500)

				sub_btn = Button(window, text = "Predict", fg = 'white', font = ('Open Sans', 15, 'bold'), bg = 'black', command = result)
				sub_btn.place(x = 750, y = 600)

			def precaution():
				new_frame.destroy()
				naya_frame = Frame(window, bg = 'Tan', height = 1080, width = 1920)
				naya_frame.pack()
				label = Label(window, text = "Prevention includes not smoking, physical activity, and maintaining \n a healthy weight. Treatment for cardiac arrest includes immediate \n cardiopulmonary resuscitation (CPR) and, if a shockable rhythm \n is present, defibrillation. Among those who survive, targeted temperature \n management may improve outcomes.", fg = 'Black', font = ('Open Sans', 20, 'bold'), padx = 10, pady = 5)
				label.place(x = 200, y = 200)

				

			def about():
				new_frame.destroy()
				naya_frame = Frame(window, bg = "Tan", height = 1080, width = 1920)
				naya_frame.pack()

				title = "What is Cardiac Arrest"
				para = "Sudden cardiac arrest is the abrupt loss of heart function, breathing and consciousness. "
				para2 = "The condition usually results from an electrical disturbance in your heart that disrupts its pumping action, \nstopping blood flow to your body."
				para3 = "Sudden cardiac arrest differs from a heart attack, when blood flow to a part of the heart is blocked."
				para31 = "However, a heart attack can sometimes trigger an electrical disturbance that leads to sudden cardiac arrest."
				para4 = "If not treated immediately, sudden cardiac arrest can lead to death.\n With fast, appropriate medical care, survival is possible.\n Giving cardiopulmonary resuscitation (CPR),"
				para5 = "using a defibrillator — or even just giving compressions to the chest"
				para6 = " — can improve the chances of survival until emergency workers arrive."

				sym = "Sign and Symptoms"
				sym1 = "Palpitations or vomiting"
				sym2 = "Dizziness"
				sym3 = "No breathing"
				sym4 = "Weakness"


				title_label = Label(window, text = title, fg = 'White', font = ('Open Sans', 20, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				title_label.place(x = 530, y = 50)
				name_label = Label(window, text = para, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				name_label.place(x = 200, y = 100)
				name_label2 = Label(window, text = para2, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				name_label2.place(x = 110, y = 140)
				name_label3 = Label(window, text = para3, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				name_label3.place(x = 150, y = 180)
				name_label31 = Label(window, text = para31, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				name_label31.place(x = 110, y = 220)
				name_label4 = Label(window, text = para4, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				name_label4.place(x = 320, y = 260)
				name_label5 = Label(window, text = para5, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				name_label5.place(x = 110, y = 360)
				name_label6 = Label(window, text = para6, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				name_label6.place(x = 330, y = 400)
				sym_lable = Label(window, text = sym, fg = 'white', font = ('Open Sans', 20, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				sym_lable.place(x = 530, y = 440)
				sym1_label = Label(window, text = sym1, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				sym1_label.place(x = 530, y = 480)
				sym2_label = Label(window, text = sym2, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				sym2_label.place(x = 530, y = 515)
				sym3_label = Label(window, text = sym3, fg = 'Black', font = ('Open Sans', 18, 'bold'), bg = 'Tan', padx = 10, pady = 5)
				sym3_label.place(x = 530, y = 550)
				sym4_label = Label(window, text = sym4, fg = 'Black', font = ('Open Sans', 18, 'bold'),bg = 'Tan', padx = 10, pady = 5)
				sym4_label.place(x = 530, y = 585)


			name = Label(window, text = "Name of Paitent: ", fg = 'Black', font = ('Open Sans', 25, 'bold'),bg='teal')
			name.place(x = 500, y = 200)
			name_label = Label(window, text = NAME, fg = 'Black', font = ('Open Sans', 25, 'bold'),bg='teal',  padx = 10, pady = 5)
			name_label.place(x = 850, y = 200)

			check_btn = Button(window, text = "Predict Cardiac Arrest", fg = 'white', font = ('Open Sans', 15, 'bold'), bg = 'black', command = predict)
			check_btn.place(x = 300, y = 500)

			pre_btn = Button(window, text = "Precautions of Cardiac Arrest", fg = 'white', font = ('Open Sans', 15, 'bold'), bg = 'black', command = precaution)
			pre_btn.place(x = 700, y = 500)

			abt_btn = Button(window, text = "What is Cardiac Arrest", fg = 'white', font = ('Open Sans', 15, 'bold'), bg = 'black', command = about)
			abt_btn.place(x = 1200, y = 500)
	else:
		messagebox.showinfo("Age grp not found ", "Enter your correct Age")


	

top_label=Label(top_frame, text = "Welcome to Cardiac Arrest Prediction Using Ai", bg = "white", fg = "black", font = ("Open Sans", 50, "bold italic"))
top_label.place(x = 100,y = 50)

name_label = Label(window, text = 'Name Of Paitent:----', fg = 'Black', font = ('Arial Black', 15, 'bold'), bg = 'Tan', padx = 10, pady = 5)
name_label.place(x = 600, y = 300)
name_entry = Entry(window, font = ('Open Sans', 20, 'bold'))
name_entry.place(x = 1000, y = 300)

age_label = Label(window, text = "Age Of Paitent:----", fg = 'black', font = ('Arial Black', 15, 'bold'), bg = 'Tan', padx = 10, pady = 5)
age_label.place(x = 600, y = 500)
age_entry = Entry(window, font = ('Open Sans', 20, 'bold'))
age_entry.place(x = 1000, y = 500)

submit_btn = Button(window, text = "Save Detail", fg = 'white', font = ('Arial Black', 15, 'bold'), bg = 'black', command = save)
submit_btn.place(x = 900, y = 800)



window.mainloop()


